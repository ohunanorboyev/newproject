<h1>Korzina</h1>

<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Nomi</th>
                <th>Soni</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button 
                    class="btn btn-small js-remove"
                     data-id="{{id}}"
                     data-csrf="{{@root.csrf}}"
                     >O'chirish</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Narxi:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn">Buyurtma Berish</button>

    </form>
    {{else}}
    <p class="card_text">Mahsulot topilmadi</p>
    {{/if}}
</div>