<h1>O'zgartirish {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-from">
    <div class="input-field ">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Mahsulot nomi</label>
        <span class="helper-text" data-error="Nomini kiriting"></span>
    </div>

    <div class="input-field ">
        <input id="price" name="price" type="number" class="validate" min="1" required value="{{course.price}}">
        <label for="price">Mahsulot narxi</label>
        <span class="helper-text" data-error="Narxini kiriting"></span>

    </div>

    <div class="input-field ">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Mahsulot rasmi</label>
        <span class="helper-text" data-error="Rasmini kiriting"></span>

    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">O'zgartirish</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{ course.id  }}">

    <button class="btn red">O'chirish</button>

</form>