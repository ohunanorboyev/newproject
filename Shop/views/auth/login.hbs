<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6 back"><a class="active" href="#login">Kirish</a></li>
        <li class="tab col s6 back"><a href="#register">Ro'yxatdan o'tish</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
      <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Magazinga Kirish</h1>
      <form action="/auth/login" method="POST">
        <div class="input-field ">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Emailni kiriting"></span>
        </div>

        <div class="input-field ">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Parol</label>
          <span class="helper-text" data-error="Parolni kiriting"></span>

        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary" type="submit">Kirish</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
      <p class="alert">{{registerError}}</p>
      {{/if}}
      <h1>Akkaunt ochish</h1>
      <form action="/auth/register" method="POST">
        <div class="input-field ">
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Emailni kiriting"></span>
        </div>

        <div class="input-field ">
          <input id="rpassword" name="password" type="password" class="validate" required>
          <label for="rpassword">Parol</label>
          <span class="helper-text" data-error="Parolni kiriting"></span>

        </div>

        <div class="input-field ">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Parolni takrorlang</label>
          <span class="helper-text" data-error="Parolni kiriting"></span>
        </div>


        <div class="input-field ">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Ismingiz</label>
          <span class="helper-text" data-error="Ismingizni kiriting"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">


        <button class="btn btn-primary" type="submit">Ro'yxatdan o'tish</button>
      </form>
    </div>

  </div>
</div>